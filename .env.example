# Configuration OneFlex
# Pour SSO : utilisez ONEFLEX_TOKEN et ONEFLEX_REFRESH_TOKEN (recommandé)
ONEFLEX_TOKEN=
ONEFLEX_REFRESH_TOKEN=

# Pour authentification classique (ne fonctionne pas avec SSO)
ONEFLEX_EMAIL=votre.email@example.com
ONEFLEX_PASSWORD=votre_mot_de_passe

# IDs optionnels pour forcer un bureau/espace spécifique
# Sinon le bot utilisera votre bureau favori automatiquement
ONEFLEX_DESK_ID=
ONEFLEX_SPACE_ID=
ONEFLEX_DESK_NAME=

# Configuration de réservation
ONEFLEX_SITE_ID=
ONEFLEX_FLOOR_ID=
ONEFLEX_ZONE_ID=

# Horaires de réservation (format HH:MM)
RESERVATION_TIME=09:00
RESERVATION_DAYS_AHEAD=7

# Jours de la semaine pour réservation récurrente (optionnel)
# 1=Lundi, 2=Mardi, 3=Mercredi, 4=Jeudi, 5=Vendredi, 6=Samedi, 7=Dimanche
# Exemple: RESERVATION_DAYS_OF_WEEK=1,3,5 pour Lundi, Mercredi, Vendredi
RESERVATION_DAYS_OF_WEEK=

# Mode récurrent : nombre de semaines à réserver à l'avance (0 = désactivé)
# Utilisé en mode --schedule pour réserver plusieurs semaines d'un coup
# Exemple: RECURRING_WEEKS=4 pour réserver les 4 prochaines semaines
RECURRING_WEEKS=0

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# VACANCES / ABSENCES
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Périodes de vacances (format: DATE:DATE,DATE:DATE ou DATE pour un jour unique)
# Les réservations ne seront PAS créées pour ces dates
# Exemple: VACATION_DATES=2026-02-10:2026-02-14,2026-03-01:2026-03-07,2026-04-15
VACATION_DATES=

# Annuler automatiquement les réservations existantes pendant les vacances
AUTO_CANCEL_VACATIONS=true

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# NOTIFICATIONS (optionnel)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Webhook Discord/Slack pour alertes (recommandé)
# Discord : Settings > Integrations > Webhooks > New Webhook
# Slack : https://api.slack.com/messaging/webhooks
NOTIFICATION_WEBHOOK_URL=

# Notifications par email (optionnel)
NOTIFICATION_EMAIL_ENABLED=false
NOTIFICATION_EMAIL_TO=votre.email@example.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=votre.email@gmail.com
SMTP_PASSWORD=votre_mot_de_passe_app
